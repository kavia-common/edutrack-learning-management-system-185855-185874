# Flask & App
FLASK_DEBUG=1
SECRET_KEY=replace_me
JWT_SECRET_KEY=replace_me_jwt

# Database
# Preferred: single URL (MySQL example)
# mysql+pymysql://user:password@host:3306/dbname
DATABASE_URL=mysql+pymysql://USER:PASSWORD@HOST:3306/DBNAME

# Alternative DB components (used if DATABASE_URL is not set)
DB_USER=USER
DB_PASSWORD=PASSWORD
DB_HOST=HOST
DB_PORT=3306
DB_NAME=DBNAME
# or MYSQL_* variables are also supported:
# MYSQL_USER=USER
# MYSQL_PASSWORD=PASSWORD
# MYSQL_HOST=HOST
# MYSQL_PORT=3306
# MYSQL_DB=DBNAME

# DB readiness tuning
DB_READY_MAX_RETRIES=30
DB_READY_SLEEP_SECONDS=2.0

# CORS
CORS_ORIGINS=*

# Stripe (optional; app starts even if unset)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Certificates
CERTIFICATE_ISSUER=EduTrack

# Site URL (for redirects / docs)
SITE_URL=http://localhost:3000

# Uploads
UPLOAD_FOLDER=uploads
